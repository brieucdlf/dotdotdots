# Author: brieucdlf
# Zsh aliases

# Zsh
alias confzsh="nvim ~/.zshrc"
alias sourcezsh="source ~/.zshrc"

# Basic commands
alias ll="ls -l"
alias la="ls -la"
alias cl="clear"
alias scmod="stat -f '%OLp'" # display chmod number

# Ncmpcpp
alias ncmpcpp="ncm"

# Ubersicht
alias confubersicht="cd ~/Library/Application\ Support/UÌˆbersicht/widgets/Pecan"

# Tmux
alias conftmux="nvim ~/.tmux.conf"
alias sourcetmux="tmux source ~/.tmux.conf"

# Nvim
alias confnvim="nvim ~/.config/nvim/init.vim"
alias vim="nvim"
alias v="nvim"

# StartupFlow
alias nrnd="nf run -e .env.local nodemon dev"
alias sflow="cd ~/Startupflow"
alias api="cd ~/Startupflow/sflow-api"
alias web="cd ~/Startupflow/sflow-webapp"
alias flamingo="cd ~/Startupflow/sflow-flamingo"
alias dot="cd ~/dotdotdots"

# React Native
alias runios="react-native run-ios"
alias runandroid="react-native run-android"

# Git
alias g="git"
alias glog="git log --oneline -10"
alias ga="git add ."
alias gc="git commit -S"
alias gcm="git commit -S -m"
