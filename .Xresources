! ==================================================
!   Urxvt 
! ==================================================
URxvt*font:			            xft:FuraCode Nerd Font:style=Regular:size=14:antialias=true;hinting=true,xft:Symbola
URxvt*boldFont:			        xtf:FuraCode Nerd Font:style=bold:size=14:antialias=true;hinting=true;xft:Symbola

URxvt*scrollBar:		        false
URxvt*letterSpace:		      -1
URxvt*internalBorder:		    10
URxvt*cursorBlink:		      true
URxvt*iso14755:			        false
URxvt*utf8:			            true
Urxvt*keysym.C-equal:		    resize-font:bigger
URxvt*keysym.C-parenright:	resize-font:smaller

! ==================================================
!   Xft 
! ==================================================
Xft.dpi:	96
Xft.antialias:	true
Xft.rgba:	subpixel
Xft.hinting:	true
Xft.hintstyle:	hintslight

! ==================================================
!   Rofi
! ==================================================
rofi.fullscreen: false
rofi.color-enabled: true
rofi.color-window: argb:e8222D32,argb:00292f37,#EBCB8B
rofi.color-normal: argb:02000000,#D8DEE9,argb:02000000,argb:02000000,#EBCB8B
rofi.color-active: argb:02000000,#D8DEE9,argb:02000000,argb:02000000,#D8DEE9
rofi.color-urgent: argb:02000000,#D8DEE9,argb:02000000,argb:02000000,#D8DEE9
rofi.font: System San Francisco Display 14
rofi.eh: 1
rofi.line-margin: 20
rofi.separator-style: solid
rofi.hide-scrollbar: true
rofi.lines: 3
rofi.width: 100
rofi.padding: 200
rofi.bw: 0
rofi.show-icons: true

