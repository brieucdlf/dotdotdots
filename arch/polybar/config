[module/xkeyboard]
type = internal/xkeyboard
format-prefix = " "
format-prefix-foreground = ${colors.nord-pink}

; List of indicators to ignore
blacklist-0 = num lock
blacklist-1 = scroll lock
format = <label-layout>
format-spacing = 0
label-layout = %layout%
label-layout-padding = 0
label-layout-foreground = ${colors.nord-white1}

[module/alsa]
type = internal/alsa
master-soundcard = default
speaker-soundcard = default
headphone-soundcard = default
master-mixer = Master
format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%%
format-muted = <label-muted>
label-muted = %{F#bf616a}ﱝ %{F- T-}
ramp-volume-0 = %{F#8fbcbb}%{F- T-}
ramp-volume-1 = %{F#88c0d0}%{F- T-}
ramp-volume-2 = %{F#81a1c1}墳%{F- T-}

[module/date]
type = internal/date
interval = 5
label = %time%
label-foreground = ${colors.nord-white1}
format-prefix = " "
format-prefix-foreground = ${colors.nord-frost2}
date-alt = %A, %d/%m/%Y

time = %H:%M
time-alt = %A, %d/%m/%Y

[module/poweroff]
type = custom/script
exec = echo " "
click-left = "/home/brieucdlf/.scripts/power.sh"
format-foreground = ${colors.nord-red}

[module/wireless]
type = internal/network
interface = "wlan0"
interval = 1
format-connected = %{T2}%{F#a3be8c}直 %{F- T-}<label-connected>
format-disconnected = %{T2}%{F#bf616a}睊 %{F- T-}
label-connected = %essid%

[module/wired]
type = internal/network
interface = eth0
interval = 1
format-connected = lol <label-connected>
format-connected-underline = ${colors.underline}
format-disconnected = <label-disconnected>
label-connected =  %local_ip%
label-disconnected = 

[module/mpd]
type = internal/mpd
