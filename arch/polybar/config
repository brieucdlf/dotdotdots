nord-grey2 = #3b4252
nord-grey3 = #434c5e
nord-grey4 = #4c566a

;Snow Storm
nord-white1 = #d8dee9
nord-white1a = #EEd8dee9
nord-white2 = #e5e9f0
nord-white3 = #eceff4

:Frost
nord-frost1 = #8fbcbb
nord-frost2 = #88c0d0
nord-frost3 = #81a1c1
